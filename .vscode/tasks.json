{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ğŸ˜ Docker: Iniciar PostgreSQL",
      "type": "shell",
      "command": "docker",
      "args": ["container", "start", "-a", "financas_postgres"],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*database system was shut down.*",
          "endsPattern": "^.*database system is ready to accept connections.*"
        }
      }
    },
    {
      "label": "ğŸš€ Backend: Iniciar FastAPI",
      "type": "shell",
      "command": "uv",
      "args": ["run", "uvicorn", "app.main:app", "--reload"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*(Uvicorn running|INFO).*",
          "endsPattern": "^.*(Application startup complete).*"
        }
      }
    },
    {
      "label": "ğŸ¨ Frontend: Iniciar Next.js",
      "type": "shell",
      "command": "bash",
      "args": ["-c", "source ~/.nvm/nvm.sh && nvm use default && npm run dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*(ready|started).*",
          "endsPattern": "^.*(compiled successfully|Ready in).*"
        }
      }
    },
    {
      "label": "ğŸ“¦ Backend: Aplicar migraÃ§Ãµes",
      "type": "shell",
      "command": "uv",
      "args": ["run", "alembic", "upgrade", "head"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "âœ… Backend: Rodar testes",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest", "-v"],
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸ§ª Frontend: Rodar testes",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "ğŸš€ STARTUP COMPLETO",
      "dependsOn": [
        "ğŸ˜ Docker: Iniciar PostgreSQL",
        "ğŸš€ Backend: Iniciar FastAPI",
        "ğŸ¨ Frontend: Iniciar Next.js"
      ],
      "dependsOrder": "sequence",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
