# Docker
alias fin-docker-start='cd ~/Documents/financas && make docker-start'
alias fin-docker-stop='cd ~/Documents/financas && make docker-stop'
alias fin-docker-logs='cd ~/Documents/financas && make docker-logs'

# Limpeza
alias fin-clean='cd ~/Documents/financas && make clean'

