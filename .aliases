# NavegaÃ§Ã£o rÃ¡pida
alias financas='cd ~/Documents/financas'
alias fin='cd ~/Documents/financas'

# Comandos rÃ¡pidos
alias fin-start='cd ~/Documents/financas && make start'
alias fin-stop='cd ~/Documents/financas && make stop'
alias fin-restart='cd ~/Documents/financas && make restart'
alias fin-status='cd ~/Documents/financas && make status'
alias fin-dev='~/Documents/financas/dev.sh'

# Backend
alias fin-backend='cd ~/Documents/financas/backend'
alias fin-be='cd ~/Documents/financas/backend'
alias fin-migrate='cd ~/Documents/financas && make backend-migrate'
